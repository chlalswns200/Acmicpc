import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        String numbers = sc.next();
        char[] chars = numbers.toCharArray();

        int sum = 0;
        for (char aChar : chars) {
            sum += aChar - '0';
        }
        System.out.println(sum);
    }
}
